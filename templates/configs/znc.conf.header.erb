AnonIPLimit = 10
ConnectDelay = 5
MaxBufferSize = 500
ProtectWebSessions = true
<% if @ssl == 'true' -%>SSLCertFile = <%= @ssl_cert %>
<% end -%>
ServerThrottle = 30
Version = 1.2
<%# Basic listener type. Only one, though there could be more. %>
<Listener listener0>
	AllowIRC = true
	AllowWeb = true
	IPv4 = true
    IPv6 = <%= @ipv6 ? @ipv6 : "false" %>
    Port = <%= @port %>
    SSL = <%= @ssl %>
</Listener>

<% if @auth_type == 'sasl' -%>
LoadModule   = saslauth saslauthd
<% end -%>
